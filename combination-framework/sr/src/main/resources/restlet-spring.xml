<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    default-autowire="byName">

    <bean id="restletComponent" class="org.restlet.ext.spring.SpringComponent">
        <property name="defaultTarget" ref="userApplication"/>
    </bean>

    <bean id="userApplication" class="com.bascker.framework.server.UserApplication" lazy-init="true" autowire="default">
        <property name="root" ref="router"/>
    </bean>

    <bean id="usersResource" class="com.bascker.framework.server.UsersResource" scope="prototype"/>

    <!-- 配置路由地址 -->
    <bean id="router" class="org.restlet.ext.spring.SpringRouter" lazy-init="true" autowire="default"></bean>

    <bean name="/users" class="com.bascker.framework.server.UsersResource" scope="prototype" lazy-init="true"/>

</beans>